color body          #88f2e0        #18201e         "[-a-z_0-9.%$]+@[-a-z_0-9.]+\\.[-a-z][-a-z]+"

# compose view ---------------------------------------------------------
color compose header            #8ea4a0        #18201e
color compose security_encrypt  #3be381        #18201e
color compose security_sign     #3be381        #18201e
color compose security_both     #3be381        #18201e
color compose security_none     #5a6d6a        #18201e
